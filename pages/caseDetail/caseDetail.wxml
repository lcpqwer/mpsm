        <block wx:else>
            <view class="content">
                <view class="text">
                    <view class="left"><text>合同编号</text></view>
                    <view class="right"><input type="text" placeholder="填写合同编号" /></view>
                </view>
                <view class="text">
                    <view class="left"><text>当事人</text></view>
                    <view class="right"><input type="text" placeholder="填写当事人姓名" /></view>
                </view>
                <view class="text">
                    <view class="left"><text>当事人证件号</text></view>
                    <view class="right"><input type="idcard" placeholder="填写当事人证件号" /></view>
                </view>
                <view class="text">
                    <view class="left"><text>申请人</text></view>
                    <view class="right"><input type="text" placeholder="填写申请人姓名" /></view>
                </view>
                <view class="text">
                    <view class="left"><text>申请人证件号</text></view>
                    <view class="right"><input type="idcard" placeholder="填写申请人证件号" /></view>
