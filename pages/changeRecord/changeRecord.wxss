/* pages/changeRecord/changeRecord.wxss */
.box {
    padding: 40rpx;
    
}

.main {
    border-left: 4rpx dashed #b2b2b2;
}

.item {
    display: flex;
    margin-bottom: 40rpx;
}

.main>.item:first-child {
    margin-top: 0;
}

.item::before {
    content: '';
    border: 6rpx solid #0278D8;
    background-color: #0278D8;
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    border-radius: 10px;
    margin-left: -7px;
    margin-right: 10px
}

.right {
    margin-top: -10rpx;
    width: calc(100% - 40rpx);
    margin-left: auto;
}

.top {
    display: flex;
}

.text {
    width: 100%;
    color: #969696;
    padding: 5rpx 0;
    font-size: 30rpx;
}

.state {
    margin-left: auto;
}

.color1 {
    color: #1780F3;
}

.color2 {
    color: #E05600;
}

.color3 {
    color: #707070;
}