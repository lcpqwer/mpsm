/* pages/batchCircul/batchCircul.wxss */
.box {
    width: 100%;
    height: 100%;
    padding-bottom: env(safe-area-inset-bottom);
    box-sizing: border-box;
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
}

.search-box {
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
}

.picker {
    width: 120rpx;
    display: flex;
    color: #0F79EE;
    font-size: 26rpx;
    padding: 0 5rpx;
    border-bottom: 2rpx solid #0F79EE;
    box-sizing: border-box;
    height: 60rpx;
}

.picker>view {
    width: calc(100% - 35rpx);
    text-align: center;
    margin: auto 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.picker>text {
    margin: auto 0 auto auto;
}

.search-box>view:nth-child(n+2),
.search-box>picker:nth-child(n+2) {
    margin-left: 20rpx;
}

.input {
    width: 290rpx;
    height: 60rpx;
    display: flex;
    color: #0F79EE;
    border-bottom: 2rpx solid #0F79EE;
    box-sizing: border-box;
}

.input>input {
    width: 200rpx;
    height: 100%;
    padding: 0 10rpx;
    font-size: 26rpx;
}

.input .icon-search-2-copy {
    margin: auto auto auto 0;
    font-size: 26rpx;
}

.input .icon-cuo {
    margin: auto 0 auto auto;
    font-size: 26rpx;
}

.list {
    width: 100%;
    padding: 0 20rpx;
    overflow: auto;
    height: calc(100% - 220rpx);
    box-sizing: border-box;
    font-size: 20rpx;
}

.list .head {
    position: sticky;
    top: 0;
    background-color: #f5f5f5;
}

.list>view {
    width: 100%;
    display: flex;
}

.list>view view {
    display: flex;
    padding: 0 5rpx;
    box-sizing: border-box;
}

.list text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list>view view>text {
    margin: auto;
}

.list>view>view:nth-child(1),
.list>view>label>view:nth-child(1) {
    width: 50rpx;
}

.list label {
    width: 100%;
    height: 100%;
    display: flex;
}

.list checkbox {
    transform: scale(0.5);
}

.list>view>view:nth-child(2),
.list>view>label>view:nth-child(2) {
    width: 140rpx;
}

.list>view>view:nth-child(3),
.list>view>label>view:nth-child(3) {
    width: 140rpx;
}

.list>view>view:nth-child(4),
.list>view>label>view:nth-child(4) {
    width: 140rpx;
}

.list>view>view:nth-child(5),
.list>view>label>view:nth-child(5) {
    width: 100rpx;
}

.list>view>view:nth-child(6),
.list>view>label>view:nth-child(6) {
    width: 140rpx;
}

.load-more {
    line-height: 50rpx;
    font-size: 20rpx;
}

.bottom {
    height: 120rpx;
    font-size: 26rpx;
    padding: 0 40rpx;
}

.bottom>view {
    height: 60rpx;
    width: 100%;
    display: flex;
    color: #C1C1C1;
}

.bottom button {
    width: 150rpx !important;
    height: 40rpx !important;
    line-height: 40rpx !important;
    color: #FFFFFF;
    font-size: 26rpx;
    font-weight: normal;
    margin: auto 0 !important;
    padding: 0;
}

.enter {
    background-color: #3291F8;
}

.out {
    background-color: #FF6200;
}

.return {
    background-color: #A4ADB3;
}

.bottom>view>text {
    margin: auto 0;
    line-height: 60rpx;
}

.bottom>view>text:nth-child(n+2) {
    margin-left: 40rpx !important;
}


.bottom>view>button:nth-child(n+2) {
    margin-left: 20rpx !important;
}

.bottom>view>text:last-child {
    margin-left: auto !important;
}

.num {
    color: #FF0000;
}

.num1 {
    color: #000000;
}

.all {
    color: #27B148;
}

.empty {
    color: #A8A8A8;
    margin: auto;
}