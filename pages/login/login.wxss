/* pages/login/login.wxss */
.box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.icon-peijianrukutongji {
    font-size: 150rpx;
    color: #3990D8;
    margin: 260rpx auto 0 auto;
}

.text {
    font-size: 35rpx;
    color: #3990D8;
    line-height: 50rpx;
    margin: 0 auto;
}

.login {
    display: flex;
    flex-direction: column;
    margin-top: 180px;
}

.wechat {
    color: white;
    height: 100rpx;
    width: 482rpx;
    border-radius: 20rpx;
    background-color: #15a23e;
    margin: 0 auto;
    display: flex;
    font-size: 40rpx;
    position: relative;
}

.icon-weixin {
    font-size: 60rpx;
    margin: auto 0 auto auto;
}

.wechat>text:nth-child(2) {
    margin: auto auto auto 20rpx;
    font-size: 42rpx;
}

.wechat>button {
    width: 100% !important;
    height: 100%;
    position: absolute;
    opacity: 0;
}

.phone {
    margin: 40rpx auto 0 auto;
    /* color: #676767; */
    font-size: 34rpx;
}