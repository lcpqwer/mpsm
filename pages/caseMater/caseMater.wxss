/* pages/caseMater/caseMater.wxss */
.box1 {
    width: 100%;
    height: 100%;
}

.search {
    width: 100%;
    height: 106rpx;
    background-color: #1780f3;
    display: flex;
}

.search>view {
    background-color: #ffffff;
    border-radius: 10rpx;
    border: 2rpx solid #707070;
}

.case {
    width: 340rpx;
    height: 64rpx;
    margin: auto 0 auto auto;
    display: flex;
}

.search-box {
    width: 60rpx;
    height: 100%;
    display: flex;
}

.search-box>.iconfont {
    font-size: 35rpx;
    margin: auto;
    color: #707070;
}

.case input {
    width: calc(100% - 60rpx);
    padding: 0 10rpx;
    font-size: 28rpx;
    height: 100%;
}

.pstyle {
    color: #707070;
}

.search>picker {
    height: 64rpx;
    margin: auto 0 auto auto;
}



.picker-state {
    width: 150rpx;
}

.date {
    height: 64rpx;
    margin: auto 0 auto auto;
    width: 190rpx;
    line-height: 64rpx;
    text-align: center;
    font-size: 24rpx;
    position: relative;
    padding-right: 34rpx;
}

.picker {
    width: 100%;
    height: 64rpx;
    border-radius: 10rpx;
    background-color: #fff;
    position: relative;
    padding-right: 34rpx;
    box-sizing: border-box;
    line-height: 64rpx;
    text-align: center;
    font-size: 24rpx;
}

.icon-xiala {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 14rpx;
    font-size: 20rpx;
    color: #707070;
}

.search>picker:last-child {
    margin-right: auto;
}

.list {
    height: calc(100% - 106rpx);
    width: 100%;
}

.login {
    width: 405rpx;
    height: 80rpx;
    color: #fff;
    font-weight: normal;
    background-color: #1780f3;
    margin-top: 300rpx;
}


