/* pages/caseMater/caseMater.wxss */
.box1 {
    width: 100%;
    height: 100%;
}

.search {
    width: 100%;
    height: 106rpx;
    background-color: #1780f3;
    display: flex;
    position: relative;
}

.search>.login-mask {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 10;
}

.search>view {
    background-color: #ffffff;
    border-radius: 10rpx;
    border: 2rpx solid #707070;
}

.case {
    width: calc(100% - 150rpx);
    height: 64rpx;
    margin: auto 20rpx;
    display: flex;
    /* font-size: 24rpx; */
    color: #707070;
    box-sizing: border-box;
}

.case>text {
    margin: auto 0;
}

.search-box {
    width: 64rpx;
    height: 100%;
    display: flex;
    margin-left: auto;
}

.search-box>.iconfont {
    font-size: 35rpx;
    margin: auto;
    color: #707070;
}

.case input {
    width: calc(100% - 60rpx);
    padding: 0 10rpx;
    font-size: 24rpx;
    height: 100%;
}

.pstyle {
    color: #707070;
}

.batch {
    height: 64rpx;
    margin: auto 20rpx auto 0;
    width: 130rpx;
    line-height: 64rpx;
    text-align: center;
    font-size: 24rpx;
    position: relative;
    color: #0F79EE;
}

.state-box {
    width: 100%;
    height: 70rpx;
    display: flex;
}

.state-box text {
    font-size: 24rpx;
    color: #82BCFB;
    margin: auto 0 auto 30rpx;
}

.state-box text.select {
    border-bottom: 4rpx solid #0F79EE;
    color: #0F79EE;
    font-weight: bold;
}

.list {
    height: calc(100% - 176rpx);
    width: 100%;
}

.login {
    width: 405rpx;
    height: 80rpx;
    color: #fff;
    font-weight: normal;
    background-color: #1780f3;
    margin-top: 300rpx;
}

.load-more {
    font-size: 28rpx;
    text-align: center;
    color: #AAAAAA;
    line-height: 60rpx;
    border: none !important;
    display: block !important;
}