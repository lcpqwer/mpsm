/* pages/confirmPhotos/confirmPhotos.wxss */
.box {
    height: calc(100% - 28rpx - 70rpx - 90rpx);
    box-sizing: border-box;
    padding: 30rpx 30rpx 0 30rpx;
    
}

.empty {
    width: 100%;
    color: #a3a3a3;
    text-align: center;
}

.list {
    width: 100%;
    height: 100%;
    overflow: auto;
}

.item {
    width: 150rpx;
    height: 150rpx;
    position: relative;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    display: inline-block;
}

.list>.item:nth-child(4n+4) {
    margin-right: 0 !important;
}

.img-box {
    width: 130rpx;
    height: 130rpx;
    margin-top: 20rpx;
}

.item .icon-cuowu1 {
    position: absolute;
    top: 0;
    right: 0;
    color: #C30707;
    font-size: 40rpx;
}

.btn-box {
    padding-bottom: 26rpx;
    display: flex;
}

.btn {
    line-height: 70rpx;
    width: 214rpx !important;
    border-radius: 10rpx;
    margin: 45rpx auto;
    padding: 0;
    font-weight: normal;
    font-size: 28rpx;
}

.next {
    background-color: #15a23e;
    color: #ffffff;
}

.add {
    border: 2rpx solid #bfbfbf;
    color: #15a23e;
}